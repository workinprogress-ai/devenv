# devenv Configuration File
# This file customizes devenv behavior for your organization
# Format: INI-style with [section] headers and key=value pairs
# Environment variables supported: ${GH_ORG}, ${GH_USER}, ${GH_TOKEN}

[organization]
# Organization name (for display and project naming)
name=Work In Progress
# GitHub organization for repos and packages
github_org=workinprogress-ai
# Email domain for user validation (empty to accept any valid email)
email_domain=workinprogress.ai

[nuget]
# GitHub Packages feed URL with organization variable
# The ${GH_ORG} variable will be expanded at runtime
feed_url=https://nuget.pkg.github.com/${GH_ORG}/index.json

[workflows]
# Kanban workflow states (comma-separated, ordered by progression)
# Note: Use single words or hyphens, avoid spaces in state names
status_workflow=Backlog,Ready,In Progress,In review,Done
# Issue types (comma-separated)
# Note: Use single words or hyphens (e.g., story,bug,feature-request not feature request)
issue_types=story,bug,task
